<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textViewEmailForResetPasswordPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إعادة تعيين كلمة المرور"
        android:textSize="30dp"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textViewEmailForResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="البريد الإلكتروني"
        tools:layout_editor_absoluteX="151dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmailForResetPasswordPage" />

    <EditText
        android:id="@+id/editTextEmailForResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="85dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmailForResetPassword" />

        <Button
            android:id="@+id/buttonEmailForResetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إرسال"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="148dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmailForResetPassword" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
